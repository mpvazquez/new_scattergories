<!DOCTYPE html>
<html>
	<head>
		<link href="https://fonts.googleapis.com/css?family=Cinzel" rel="stylesheet">
		<link rel="shortcut icon" href="/images/favicon.ico">
		<link rel="stylesheet" href="/css/normalize.css"/>
		<link rel="stylesheet" href="/css/style.css" />

		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<script type="text/javascript" src="/js/game.js"></script>

		<title>Scattergories Game</title>
	</head>

	<body>
		<header>
			<a href="/">
				<h2 id="game-name">Scattergories</h2>
				<img id="scattergories-logo" src="/images/scattergories-logo.png" alt="Logo">
			</a>
			
			<div id="game-details-container-left">
				<div data-round="<%= round %>" id="game-round">Round: <%= round %></div>
				<div id="game-score-container">Score: <span id="game-score">0</span></div>
			</div>
			<div id="game-details-container-right">
				<div id="game-letter"></div>
				<div id="game-timer-container">Timer: <span id="game-timer">120</span></div>
			</div>
		</header>


		<section id="game-setup-section">
			<button id="roll-die-button">Roll The Die</button>
			<button disabled id="timer-button">Start Timer</button>
		</section>

		<section class="blur-text" id="category-container">
			<div id="game-message">
				<div>Congrats! You scored <span id="round-score">0</span> points this round!</div>
				<hr />
				<div>Total Score: <span id="total-score"></span></div>
				<a id="next-round-link" href="/game/1">
					<button id="next-round-button">Next Round</button>
				</a>
			</div>
			<% categoryList.forEach(function(category, index) {%>
			<div class="category-item">
				<label id="category-item-<%= index %>"><%= category %></label>
				<div class="category-input-container">
					<input class="category-input"
						data-index="<%= index %>"
						disabled="true"
						id="category-input-<%= index %>"
						placeholder=" Answer Here"
						spellcheck="true"
						type="text" />
					<div class="category-input-message" id="category-input-message-<%= index %>"></div>
				</div>
			</div>
			<% }); %>
		</section>

		<footer>
			<p><a href="http://www.marcopvazquez.com/" target="_blank">This website was created by Marco Pretell-VÃ¡zquez</a></p>
		</footer>
	</body>
</html>
