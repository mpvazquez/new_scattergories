<!DOCTYPE html>
<html>
	<head>
		<link rel="shortcut icon" href="/images/favicon.ico">
		<link href="https://fonts.googleapis.com/css?family=Cinzel" rel="stylesheet">
		<link rel="stylesheet" href="/css/normalize.css"/>
		<link rel="stylesheet" href="/css/style.css" />

		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<script type="text/javascript" src="/js/scripts.js"></script>
		<script type="text/javascript" src="/js/game.js"></script>

		<title>Scattergories Game</title>
	</head>

	<body>
		<header>
			<a href="/">
				<h2>Scattergories</h2>
			</a>
			<img id="scattergories-logo" src="/images/scattergories-logo.png" alt="Logo">
			<div id="game-details-container">
				<div data-round="<%= round %>" id="game-round">Round: <%= round %></div>
				<div id="game-letter"></div>
				<div id="game-timer-container">Timer: <span id="game-timer">120</span></div>
			</div>
		</header>


		<section id="game-setup-section">
			<button id="roll-die-button">Roll The Die</button>
			<button disabled id="timer-button">Start Timer</button>
		</section>

		<section class="blur-text" id="category-container">
			<div id="game-message"></div>
			<% categoryList.forEach(function(category, index) {%>
			<div class="category-item">
				<label id="category-item-<%= index %>"><%= category %></label>
				<input class="category-input" data-category="<%= index %>" id="category-input-<%= index %>" disabled placeholder=" Answer Here" spellcheck="true" type="text" />
			</div>
			<% }); %>
		</section>

		<footer>
			<p><a href="http://www.marcopvazquez.com/" target="_blank">This website was created by Marco Pretell-VÃ¡zquez</a></p>
		</footer>
	</body>
</html>
